# ================================
# BOT CONFIGURATION
# ================================

# Discord Bot Credentials
TOKEN=bot_token_here # Change this to your bot's token
CLIENT_ID=client_id_here # Change this to your bot's client ID
GUILD_ID=guild_id_here # Change this to your server's guild ID

# Admin Panel
ENABLE_ADMIN_PANEL=true

# ================================
# DATABASE CONFIGURATION
# ================================

# MySQL Database Connection
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=MYSQL_USERNAME # Change this to your MySQL username
MYSQL_PASSWORD=MYSQL_PASSWORD # Change this to your MySQL password
MYSQL_DATABASE=MYSQL_DATABASE # Change this to your MySQL database name

# MySQL Connection Pool Settings
MYSQL_CONNECTION_LIMIT=10
MYSQL_QUEUE_LIMIT=0

# Use MySQL (set to false to fallback to JSON)
USE_MYSQL=true

# ================================
# ADMIN PANEL CONFIGURATION
# ================================

# Admin Panel Server
ADMIN_PORT=3000

# Session Secret (CHANGE THIS!)
SESSION_SECRET= # Change this to a secure random string for session management in the admin panel
# To generate a new session secret, run:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
